= simple_form_for(@mail_account) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :email
    = f.association :user
    = f.input :login
    = f.input :password
    = f.input :host
    = f.input :port
    = f.input :ssl
    = f.input :smtp_server
    = f.input :smtp_port

  .form-actions
    = f.button :submit
